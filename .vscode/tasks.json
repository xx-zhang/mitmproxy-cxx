{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I/usr/local/include",
                "-L/usr/local/lib",
                "-L/usr/local/lib64/",
                "-lpthread",
                "-std=c++11", 
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.elf"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}
